{
  "scripts": {
    "install:all": "npm install && cd backend && npm install && cd .. && cd frontend && npm install",
    "backend": "cd backend && npm run start",
    "frontend": "cd frontend && npm run dev",
    "lint:both": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "eslint backend/src --ext .ts",
    "lint:frontend": "eslint frontend/src --ext .ts,.vue",
    "format:backend": "prettier --write backend/src",
    "format:frontend": "prettier --write frontend/src",
    "test": "vitest",
    "test:watch": "vitest watch"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-vue": "^5.1.2",
    "@vitest/ui": "^2.1.2",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^6.6.0",
    "eslint-plugin-vue": "^9.28.0",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2",
    "vitest": "^2.1.2",
    "vue-eslint-parser": "^9.4.3"
  }
}
