{
  "compilerOptions": {
    "types": ["vitest/globals"],
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "frontend/src/**/*",
    "backend/src/**/*",
    "backend/__tests__/**/*",
    "vitest.config.ts"
  ],
  "exclude": ["node_modules"]
}
